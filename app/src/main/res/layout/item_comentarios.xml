<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TextIcons"
    android:orientation="vertical"
    android:padding="@dimen/divides_margin"
    android:minHeight="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/ly_circular_size"
            android:layout_height="@dimen/ly_circular_size"
            android:backgroundTint="@color/CircularIconBase"
            android:background="@drawable/drw_acronym">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="@dimen/divides_margin"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="USUARIO"
                android:id="@+id/txt_UsuarioNombre"
                android:textStyle="bold"
                android:textColor="@color/PrimaryText"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="15/04/2019"
                android:id="@+id/txt_fchComentario"
                android:textStyle="bold"
                android:textColor="@color/SecondayText"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:id="@+id/txtComentario"
        android:textColor="@color/SecondayText"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        android:layout_height="wrap_content" />
</LinearLayout>