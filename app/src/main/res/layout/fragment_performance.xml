<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.performance.PerformanceFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 1"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="36sp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_chart"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Proyectos Registrados"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 3"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="36sp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_equalizer"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDescDesempe単o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Efectividad"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 5"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="48dp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_pie_chart"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDesc5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Proyectos en atraso"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="7">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 2"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="48dp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_pie_chart"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Procesos atrasados hoy"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 4"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="36sp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_chart"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDescDesempe単o4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Procesos terminados a tiempo"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloDes6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desempe単o 6"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/DividerColor" />

                        <TextView
                            android:id="@+id/textViewPorcentajeDes6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="0%"
                            android:textColor="@color/PrimaryText"
                            android:textSize="36sp" />

                        <ImageView
                            android:layout_width="@dimen/icon_cardsize"
                            android:layout_height="@dimen/icon_cardsize"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_equalizer"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDescDesempe単o6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Desempe単o 6"
                            android:textColor="@color/SecondayText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>