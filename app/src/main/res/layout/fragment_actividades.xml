<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    card_view:cardElevation="@dimen/card_elevation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardUseCompatPadding="true"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/divides_margin"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:id="@+id/textViewNombreActividad"
                                    android:textColor="@color/PrimaryText"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/DividerColor"/>

                                <TextView
                                    android:id="@+id/textViewDescripcionActividad"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:textColor="@color/SecondayText"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/viewEstadoColor"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/drw_acronym"/>

                                <TextView
                                    android:id="@+id/textViewEstado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="ESTADO"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="@dimen/text_size_estados"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textViewPosicion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/divides_margin"
                                    android:text="1/5"
                                    android:textColor="@color/SecondayText"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/DividerColor"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divides_margin"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <TextView
                                        android:id="@+id/textViewSiglas"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextIcons"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="15dp">
                                    <TextView
                                        android:id="@+id/textViewDireccion"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/PrimaryText"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="DirecciÃ³n"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_person" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewResponsable"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="true"
                                        android:textColor="@color/PrimaryText"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Responsable"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_launch" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewFechaInicioPrevista"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FECHA INICIO PREVISTA"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_keyboard" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="15dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewFechaFinPrevista"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FECHA FIN PREVISTA"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_calendar"
                                        android:tint="@color/TextIcons" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewDiasHabilesPrevistos"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="DÃAS HABILES PREVISTOS"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:background="@color/DividerColor"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_launch" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewFechaInicioReal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FECHA INICIO REAL"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_keyboard" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewFechaFinReal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FECHA FIN REAL"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="@dimen/ly_circular_size"
                                    android:layout_height="@dimen/ly_circular_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drw_acronym"
                                    android:backgroundTint="@color/CircularIconBase">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_calendar"
                                        android:tint="@color/TextIcons" />

                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewDiasHabilesReales"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/PrimaryText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="DÃAS HABILES REALES"
                                        android:textColor="@color/SecondayText"
                                        android:textAllCaps="true"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="@dimen/divides_margin"
                            android:background="@color/DividerColor"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/divides_margin"
                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/linearLayoutMetas"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/imgContentDescripcion"
                                    android:src="@drawable/ic_equalizer" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/Metas"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="@dimen/text_size_estados"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutDependencia"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/imgContentDescripcion"
                                    android:src="@drawable/ic_visibility" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Dependencias"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="@dimen/text_size_estados"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/divides_margin"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/Imagenes"
                                    android:layout_gravity="left"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/divides_margin"
                                    android:textColor="@color/PrimaryText"
                                    android:layout_height="wrap_content" />

                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:id="@+id/recyclerViewImagenes"
                                    android:layout_height="wrap_content"
                                    android:overScrollMode="never">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textWithoutDataImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/textWithoutData"
                                    android:layout_gravity="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/divides_margin"
                                android:layout_height="500dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/Comentario"
                                    android:layout_gravity="left"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/divides_margin"
                                    android:textColor="@color/PrimaryText"
                                    android:layout_height="wrap_content" />

                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:id="@+id/recyclerViewComentarios"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:overScrollMode="never">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textWithoutDataComentario"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/textWithoutData"
                                    android:layout_gravity="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FloatingActionButtonComentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="end|bottom"
        android:tint="#fff"
        app:srcCompat="@android:drawable/ic_input_add"  />

</android.support.design.widget.CoordinatorLayout>
